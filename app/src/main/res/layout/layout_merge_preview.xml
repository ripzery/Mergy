<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/MergePreview"
    android:layout_marginTop="@dimen/mergePreviewMarginTop"
    android:layout_width="@dimen/mergePreviewWidth"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundImage"
    tools:context=".ui.merge.MergeActivity"
    tools:showIn="@layout/activity_merge">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/default_background" />

    <me.ripzery.warpcan.viewgroups.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>